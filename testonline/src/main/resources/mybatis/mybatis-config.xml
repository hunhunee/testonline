<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <settings>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>



    <typeAliases>
        <typeAlias type="com.sie.domain.Teacher" alias="teacher"/>
        <typeAlias type="com.sie.domain.Lesson" alias="lesson"/>
    </typeAliases>

    <mappers>
        <mapper resource="mybatis/mapper/LessonManageMapper/LessonManageMapper.xml"/>
        <mapper resource="mybatis/mapper/PersonManageMapper/TeacherManageMapper.xml"/>
    </mappers>
</configuration>